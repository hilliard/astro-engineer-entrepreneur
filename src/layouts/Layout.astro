---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

// Fetch current user and permissions from auth endpoint
let permissions: string[] = [];
let isAuthenticated = false;

try {
  // Get the cookies from the request
  const cookieHeader = Astro.request.headers.get("cookie");

  const response = await fetch("http://localhost:3000/api/auth/me", {
    headers: {
      Cookie: cookieHeader || "",
    },
    credentials: "include",
  });

  if (response.ok) {
    const user = await response.json();
    permissions = user.permissions || [];
    isAuthenticated = true;
  }
} catch (error) {
  console.error("Failed to fetch user:", error);
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Epilogue:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Sonny's Astro Blog</title>
  </head>
  <body>
    <Navbar permissions={permissions} isAuthenticated={isAuthenticated} />
    <slot />
    <Footer />
  </body>

  <style is:global>
