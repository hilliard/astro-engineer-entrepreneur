---
import ButtonLink from "./ButtonLink.astro";
import Section from "./Section.astro";
---

<Section>
  <header id="header">
    <div class="content">
      <h1>
        <!-- header goes here (hint: use <span class="accent"> for accented text) -->
        I'm an <span class="accent">Engineer / Entrepreneur</span> from Westminster,
        CO
      </h1>
      <p class="description">
        Iâ€™m an Engineer and Entrepreneur who architects scalable digital
        solutions. Specializing in the modern framework ecosystems, I transform
        complex requirements into high-performance applications, robust backend
        systems, and efficient, business-driven technology. I am also on the
        Artificial Intelligence Advisory Board for the University of Colorado,
        Colorado Springs Women's College.
      </p>
      <div class="button-container">
        <ButtonLink href="/projects" text="View Projects" variant="secondary" />
        <ButtonLink
          href="/Hilliard-M-Scott-Resume-2025.pdf"
          text="Download Resume"
          isDownload={true}
        />
      </div>
    </div>
    <!-- image goes here -->
    <img
      src="/images/Me-In-Vancouver-243.png"
      alt="A portrait of the author"
      class="profile-pic"
    />
  </header>
</Section>

<style>
  #header {
    display: grid;
    grid-template-columns: 540px 1fr;
    justify-items: center;
    gap: 80px;
    align-items: center;

    h1 {
      font-size: 44px;
      display: flex;
      flex-direction: column;
      margin-bottom: 20px;

      .accent {
        color: var(--primary);
      }
    }

    .button-container {
      display: flex;
      gap: 10px;
    }

    .description {
      line-height: 28px;
      color: var(--dark);
      margin-bottom: 30px;
    }

    .profile-pic {
      border-radius: 50%;
      width: 300px; /* Adjust size as needed */
      height: 300px; /* Must match width */
      object-fit: cover; /* Crops the image to fit center */
    }

    @media (max-width: 1000px) {
      & {
        grid-template-columns: 1fr;
        grid-template-rows: auto;
        gap: 40px;

        img {
          grid-row: 1;
        }
      }
    }

    @media (max-width: 600px) {
      .button-container {
        flex-direction: column;
      }
    }
  }
</style>
